<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:makeramen="http://schemas.android.com/apk/lib/com.makeramen.rounded.RoundedImageView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:background="@drawable/background"
		android:dither="true">

	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal"
				android:layout_marginTop="30dp">

			<com.makeramen.rounded.RoundedImageView
					android:id="@+id/panel"
					android:layout_width="230dp"
					android:layout_height="135dp"
					android:src="@drawable/steel"
					android:scaleType="center"
					makeramen:corner_radius="30dip"
					makeramen:border_width="2dip"
					makeramen:border_color="#333333"/>

		</LinearLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal"
				android:layout_marginTop="30dp">

			<ImageView
					android:id="@+id/screw1"
					android:contentDescription="@string/image_desc"
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_marginLeft="-210dp"
					android:layout_marginTop="5dp"
					android:src="@drawable/screw"
					android:rotation="0"
					android:dither="true"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal"
				android:layout_marginTop="30dp">

			<ImageView
					android:id="@+id/screw2"
					android:contentDescription="@string/image_desc"
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_marginLeft="-210dp"
					android:layout_marginTop="120dp"
					android:src="@drawable/screw"
					android:rotation="0"
					android:dither="true"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal"
				android:layout_marginTop="30dp">

			<ImageView
					android:id="@+id/screw3"
					android:contentDescription="@string/image_desc"
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_marginLeft="210dp"
					android:layout_marginTop="5dp"
					android:src="@drawable/screw"
					android:rotation="0"
					android:dither="true"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center_horizontal"
				android:layout_marginTop="30dp">

			<ImageView
					android:id="@+id/screw4"
					android:contentDescription="@string/image_desc"
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_marginLeft="210dp"
					android:layout_marginTop="120dp"
					android:src="@drawable/screw"
					android:rotation="0"
					android:dither="true"/>
		</LinearLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="40dp">

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal">

				<TextView
						android:id="@+id/_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:text="@string/main_status"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textStyle="bold"
						android:textColor="@android:color/black"/>

				<TextView
						android:id="@+id/status"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text=""
						android:textStyle="bold"
						android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal">

				<TextView
						android:id="@+id/_countup"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="@string/main_countup"
						android:textStyle="bold"
						android:textColor="@android:color/black"/>

				<TextView
						android:id="@+id/countup"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text=""
						android:textStyle="bold"
						android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal">

				<TextView
						android:id="@+id/_countdown"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="@string/main_countdown"
						android:textStyle="bold"
						android:textColor="@android:color/black"/>

				<TextView
						android:id="@+id/countdown"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text=""
						android:textStyle="bold"
						android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal">

				<TextView
						android:id="@+id/_power"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="@string/main_power"
						android:textStyle="bold"
						android:textColor="@android:color/black"/>

				<TextView
						android:id="@+id/power"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text=""
						android:textStyle="bold"
						android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal">

				<TextView
						android:id="@+id/_charge"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="@string/main_charge"
						android:textStyle="bold"
						android:textColor="@android:color/black"/>

				<TextView
						android:id="@+id/charge"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text=""
						android:textStyle="bold"
						android:textColor="@android:color/black"/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal">

				<TextView
						android:id="@+id/_temp"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text="@string/main_temp"
						android:textStyle="bold"
						android:textColor="@android:color/black"/>

				<TextView
						android:id="@+id/temp"
						android:layout_marginLeft="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:text=""
						android:textStyle="bold"
						android:textColor="@android:color/black"/>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="35dp"
			android:layout_marginLeft="30dp">

		<ch.rinalducci.Widgets.VerticalProgressBar
				style="?android:attr/progressBarStyleHorizontal"
				android:progressDrawable="@drawable/progressbarhorizontal_blue"
				android:id="@+id/progressGaz"
				android:layout_width="wrap_content"
				android:progress="0"
				android:max="100"
				android:layout_height="150dp"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:orientation="vertical">

		<ch.rinalducci.Widgets.DualJoystickView
				android:id="@+id/dualjoystickView"
				android:layout_gravity="center_horizontal"
				android:layout_width="fill_parent"
				android:layout_height="175dp"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"
				android:keepScreenOn="true"/>

	</LinearLayout>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="15dp"
			android:gravity="left">

		<TextView
				android:id="@+id/gaz"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="@string/main_gaz"
				android:textStyle="bold"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:layout_marginTop="183dp">

		<ToggleButton
				android:id="@+id/toggleButtonLed"
				android:layout_width="95dp"
				android:layout_height="40dp"
				android:textOn="LED"
				android:textOff="LED"
				android:background="@drawable/togglebutton_selector_blue"
				android:textStyle="bold"/>

		<ToggleButton
				android:id="@+id/toggleButtonRec"
				android:layout_width="95dp"
				android:layout_height="40dp"
				android:layout_marginLeft="5dp"
				android:textOn="Rec."
				android:textOff="Rec."
				android:enabled="false"
				android:background="@drawable/togglebutton_selector_blue"
				android:textStyle="bold"/>
	</LinearLayout>

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:layout_marginTop="230dp">

		<ToggleButton
				android:id="@+id/toggleButtonCap"
				android:layout_width="95dp"
				android:layout_height="40dp"
				android:textOn="@string/main_cap"
				android:textOff="@string/main_cap"
				android:background="@drawable/togglebutton_selector_blue"
				android:textStyle="bold"/>

		<ToggleButton
				android:id="@+id/toggleButtonTang"
				android:layout_width="95dp"
				android:layout_height="40dp"
				android:layout_marginLeft="5dp"
				android:textOn="@string/main_tanguage"
				android:textOff="@string/main_tanguage"
				android:background="@drawable/togglebutton_selector_blue"
				android:textStyle="bold"/>

		<ToggleButton
				android:id="@+id/toggleButtonRoul"
				android:layout_width="95dp"
				android:layout_height="40dp"
				android:layout_marginLeft="5dp"
				android:textOn="@string/main_roulis"
				android:textOff="@string/main_roulis"
				android:background="@drawable/togglebutton_selector_blue"
				android:textStyle="bold"/>
	</LinearLayout>
</RelativeLayout>