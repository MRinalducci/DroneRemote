<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" android:state_focused="false">
		<shape>
			<gradient android:endColor="@color/blue_dark_custom" android:startColor="@color/blue_light" android:type="radial" android:gradientRadius="170"/>
			<stroke android:width="1dp" android:color="@color/gray"/>
			<corners android:radius="8dp"/>
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
		</shape>
	</item>
	<item android:state_pressed="true" android:state_focused="true">
		<shape>
			<gradient android:endColor="@color/blue_dark_custom" android:startColor="@color/blue_light" android:type="radial" android:gradientRadius="170"/>
			<stroke android:width="1dp" android:color="@color/gray"/>
			<corners android:radius="8dp"/>
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
		</shape>
	</item>
	<item android:state_pressed="false" android:state_focused="false">
		<shape>
			<gradient android:angle="270" android:endColor="@color/blue_dark_custom" android:startColor="@color/blue_light"/>
			<stroke android:width="1dp" android:color="@color/gray"/>
			<corners android:radius="8dp"/>
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
		</shape>
	</item>
	<item android:state_pressed="false" android:state_focused="true">
		<shape>
			<gradient android:angle="270" android:endColor="@color/blue_dark_custom" android:startColor="@color/blue_light"/>
			<stroke android:width="1dp" android:color="@color/gray"/>
			<corners android:radius="8dp"/>
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
		</shape>
	</item>

</selector>